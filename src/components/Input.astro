---
    // Export a "Props" interface to .
    export interface Props {
        title: string,

    }
    const { title } = Astro.props;
---

<input type="number" placeholder={title} name={title} id={title}
    class="block w-full px-8 py-6 text-lg font-bold text-white rounded-lg placeholder:text-gray-300 bg-brand active:outline-none focus:outline-none"
    required />